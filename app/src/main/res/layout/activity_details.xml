<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_content">

    <TextView android:text="@string/status_code"
              style="@style/Text.Header"/>

    <TextView android:id="@+id/txtv_status"
              style="@style/Text.Value"/>

    <TextView android:text="@string/tid"
              style="@style/Text.Header"/>

    <TextView android:id="@+id/txtv_tid"
              tools:text="this is a test with a super long text"
              style="@style/Text.Value"/>

    <TextView android:text="@string/directives"
              style="@style/Text.Header"/>

    <TextView android:id="@+id/txtv_directives"
              style="@style/Text.Value"/>

</LinearLayout>